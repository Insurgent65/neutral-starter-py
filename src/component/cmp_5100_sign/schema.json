{
    "inherit": {
        "locale": {
            "trans": {
                "es": {
                    "Reminder": "Recordar",
                    "Sign in": "Iniciar sesión",
                    "Sign up": "Registrarse",
                    "Sign out": "Cerrar sesión",
                    "Confirm logout": "Confirmar cierre de sesión"
                },
                "fr": {
                    "Reminder": "Rappel",
                    "Sign in": "Se connecter",
                    "Sign up": "S'inscrire",
                    "Sign out": "Se déconnecter",
                    "Confirm logout": "Confirmer la déconnexion"
                },
                "de": {
                    "Reminder": "Erinnerung",
                    "Sign in": "Anmelden",
                    "Sign up": "Registrieren",
                    "Sign out": "Abmelden",
                    "Confirm logout": "Abmeldung bestätigen"
                }
            }
        },
        "data": {
            "drawer": {
                "menu": {
                    "session:": {
                        "user": {
                            "name": "User",
                            "tabs": "user",
                            "icon": "x-icon-user"
                        }
                    },
                    "session:true": {
                        "user": {
                            "name": "User",
                            "tabs": "user",
                            "icon": "x-icon-user"
                        }
                    }
                }
            },
            "menu": {
                "session:": {
                    "user": {
                        "login": {
                            "text": "Sign in",
                            "link": "[:;data->sign_0yt2sa->manifest->route:]/in",
                            "icon": "x-icon-sign-in"
                        },
                        "register": {
                            "text": "Sign up",
                            "link": "[:;data->sign_0yt2sa->manifest->route:]/up",
                            "icon": "x-icon-sign-up"
                        },
                        "reminder": {
                            "text": "Reminder",
                            "link": "[:;data->sign_0yt2sa->manifest->route:]/reminder",
                            "icon": "x-icon-sign-reminder"
                        }
                    }
                },
                "session:true": {
                    "user": {
                        "logout": {
                            "text": "Sign out",
                            "link": "[:;data->sign_0yt2sa->manifest->route:]/out",
                            "icon": "x-icon-sign-out"
                        }
                    }
                }
            },
            "navbar": {
                "menu": {
                    "session:": {
                        "signin": {
                            "name": "Sign in",
                            "link": "#loginModal",
                            "icon": "x-icon-sign-in",
                            "prop": {
                                "data-bs-toggle": "modal",
                                "data-bs-target": "#loginModal"
                            }
                        },
                        "signup": {
                            "name": "Sign up",
                            "link": "#registerModal",
                            "icon": "x-icon-sign-up",
                            "prop": {
                                "data-bs-toggle": "modal",
                                "data-bs-target": "#registerModal"
                            }
                        }
                    },
                    "session:true": {
                        "signout": {
                            "name": "Sign out",
                            "link": "#logoutModal",
                            "icon": "x-icon-sign-out",
                            "prop": {
                                "data-bs-toggle": "modal",
                                "data-bs-target": "#logoutModal"
                            }
                        }
                    }
                }
            }
        }
    },
    "data": {
        "site": {
            "sign_links": {
                "in": "[:;data->sign_0yt2sa->manifest->route:]/in",
                "up": "[:;data->sign_0yt2sa->manifest->route:]/up",
                "reminder": "[:;data->sign_0yt2sa->manifest->route:]/reminder",
                "out": "[:;data->sign_0yt2sa->manifest->route:]/out",
                "pin": "[:;data->sign_0yt2sa->manifest->route:]/pin"
            }
        },
        "core": {
            "forms": {
                "sign_in_form": {
                    "check_fields": [
                        "email",
                        "password",
                        "remember",
                        "notrobot-hidden",
                        "notrobot",
                        "pin"
                    ],
                    "validation": {
                        "minfields": 4,
                        "maxfields": 6,
                        "allow_fields": [
                            "email",
                            "password",
                            "remember",
                            "notrobot-hidden",
                            "notrobot",
                            "pin",
                            "ftoken.*"
                        ]
                    },
                    "rules": {
                        "email": {
                            "required": true,
                            "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+",
                            "regex": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
                        },
                        "password": {
                            "required": true,
                            "minlength": 8,
                            "maxlength": 70,
                            "pattern": "^\\S(?:.*\\S)?$",
                            "regex": "^\\S(?:.*\\S)?$"
                        },
                        "remember": {
                            "required": false,
                            "value": "true"
                        },
                        "notrobot": {
                            "required": true,
                            "value": "human"
                        },
                        "notrobot-hidden": {
                            "set": false
                        },
                        "pin": {
                            "pattern": "^[A-Za-z0-9]{4,10}$"
                        }
                    }
                },
                "sign_out_form": {
                    "check_fields": [],
                    "validation": {},
                    "rules": {}
                },
                "sign_reminder_form": {
                    "check_fields": [
                        "email",
                        "notrobot-hidden",
                        "notrobot"
                    ],
                    "validation": {
                        "minfields": 2,
                        "maxfields": 4,
                        "allow_fields": [
                            "email",
                            "notrobot-hidden",
                            "notrobot",
                            "ftoken.*"
                        ]
                    },
                    "rules": {
                        "email": {
                            "required": true,
                            "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+",
                            "regex": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
                            "dns": "MX"
                        },
                        "notrobot": {
                            "required": true,
                            "value": "human"
                        },
                        "notrobot-hidden": {
                            "set": false
                        }
                    }
                },
                "sign_up_form": {
                    "check_fields": [
                        "alias",
                        "email",
                        "password",
                        "rptpassword",
                        "birthdate",
                        "agree",
                        "notrobot",
                        "notrobot-hidden"
                    ],
                    "validation": {
                        "minfields": 5,
                        "maxfields": 9,
                        "allow_fields": [
                            "alias",
                            "email",
                            "password",
                            "rptpassword",
                            "birthdate",
                            "notrobot-hidden",
                            "notrobot",
                            "agree",
                            "ftoken.*"
                        ]
                    },
                    "rules": {
                        "alias": {
                            "_comment_:example": "Comment example.",
                            "required": true,
                            "minlength": 3,
                            "maxlength": 50,
                            "pattern": "[^<>\\{\\}&quot;,@#$%*+=~`;:]+",
                            "regex": "^\\p{L}[\\p{L}\\s'\\-\\.0-9]+$"
                        },
                        "email": {
                            "required": true,
                            "minlength": 6,
                            "maxlength": 200,
                            "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+",
                            "regex": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
                            "dns": "MX"
                        },
                        "password": {
                            "required": true,
                            "minlength": 8,
                            "maxlength": 70,
                            "pattern": "^\\S(?:.*\\S)?$",
                            "regex": "^\\S(?:.*\\S)?$",
                            "match": "rptpassword"
                        },
                        "rptpassword": {
                            "required": true,
                            "minlength": 8,
                            "maxlength": 70,
                            "pattern": "^\\S(?:.*\\S)?$",
                            "regex": "^\\S(?:.*\\S)?$",
                            "match": "password"
                        },
                        "birthdate": {
                            "required": true,
                            "minage": 13,
                            "maxage": 100
                        },
                        "agree": {
                            "required": true,
                            "value": "true"
                        },
                        "notrobot": {
                            "required": true,
                            "value": "human"
                        },
                        "notrobot-hidden": {
                            "set": false
                        }
                    }
                }
            }
        }
    }
}
